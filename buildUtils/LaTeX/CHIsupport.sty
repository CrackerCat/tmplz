% vim:ft=tex

\defaultfontfeatures{Path = fonts/sarasa/, Mapping=tex-text}

\setCJKmainfont[
    BoldFont=sarasa-term-sc-regular.otf,
    ItalicFont=sarasa-term-sc-regular.otf,
    SmallCapsFont=sarasa-term-sc-regular.otf
]{sarasa-term-sc-regular.otf}

\fontspec[
    BoldFont=sarasa-term-sc-bold.otf,
    ItalicFont=sarasa-term-sc-italic.otf,
    SmallCapsFont=sarasa-term-sc-regular.otf
]{sarasa-term-sc-italic.otf}

\setCJKsansfont{sarasa-term-sc-regular.otf}
\setCJKmonofont{sarasa-term-sc-regular.otf}

\setCJKfamilyfont{zhsong}{sarasa-term-sc-regular.otfr}
\setCJKfamilyfont{zhhei}{sarasa-term-sc-regular.otf}
\setCJKfamilyfont{zhfs}{sarasa-term-sc-regular.otf}
\setCJKfamilyfont{zhkai}{sarasa-term-sc-regular.otf}

\newcommand*{\songti}{\CJKfamily{zhsong}} % 宋体
\newcommand*{\heiti}{\CJKfamily{zhhei}}   % 黑体
\newcommand*{\kaishu}{\CJKfamily{zhkai}}  % 楷书
